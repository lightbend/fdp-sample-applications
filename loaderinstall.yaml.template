apiVersion: v1
kind: Pod
metadata:
  name: killrweatherloader
spec:
  containers:
  - name: publisher
    image: lightbend/loader:VERSION
    volumeMounts:
    - name: datadir
      mountPath: /usr/share
  # These container runs during pod initialization
  initContainers:
  - name: install
    image: busybox
    command:
    - sh
    - -c
    - wget http://s3-eu-west-1.amazonaws.com/fdp-killrweather-data/killrweather/data.zip -O /data-dir/data.zip; unzip /data-dir/data.zip -d /data-dir/
    volumeMounts:
    - name: datadir
      mountPath: "/data-dir"
  dnsPolicy: Default
  volumes:
  - name: datadir
    emptyDir: {}
